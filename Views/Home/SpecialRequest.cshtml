
@{
    ViewBag.Title = "Special Request";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Special Request</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label class="form-label mt-4">Customer Name</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Mike K</option>
                            <option>John D</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-7">
                            <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" aria-describedby="emailHelp">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Phone</label>
                            <input type="text" class="form-control phone" id="txtPhone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-3">Request Type</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Shipping</option>
                            <option>Pre-order</option>
                            <option>Layawait</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Description</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>
            </div>
        </div>
    </div>
</form>
<script>
     NumberOnly(".phone");
     FormatPhoneNumber();
</script>