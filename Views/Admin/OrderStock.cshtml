
@{
    ViewBag.Title = "Order Stock";
}
<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link active" href="@Url.Action("OrderStock", "Admin")">Order Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="@Url.Action("ReceiveStock", "Admin")">Receive Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="@Url.Action("ReturnStock", "Admin")">Return Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("TransferStock", "Admin")">Transfer Stock</a>
    </li>
</ul>
<br />
<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Purchase Order</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Supplier</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Collectible Company</option>
                            <option>Bolton Auction Rooms</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Deliver to</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>West</option>
                            <option>East</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Supplier Invoice Number (Optional)</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter a supplier invoice number">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Delivery Date</label>
                        <input type="text" class="form-control" id="exampleInputEmail1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="form-label mt-4">Order Number</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="* Enter an order number, must be unique">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Note</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                </fieldset>
            </div>

        </div>
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-body">
                <fieldset>
                    <legend>Products</legend>
                    <div class="form-group row">
                        <div class="col col-sm-7">
                            <label class="form-label mt-4">Name/Number/Product</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col col-sm-7">
                            <label class="form-label mt-4">Or</label><br />
                            <button type="button" class="btn btn-primary mt-4">Scan to add product</button>
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Quantity</label>
                        <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter quantity">
                    </div>
                </fieldset>
                <br />
                <fieldset>
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-primary">
                                <th scope="col">Product Name</th>
                                <th scope="col">Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    Vase
                                </th>
                                <td>20</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    American Compass
                                </th>
                                <td>2</td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>
                <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                &nbsp;
                <button type="submit" class="btn btn-secondary mt-4 width-150px">Cancel</button>
            </div>
        </div>
    </div>
</form>

