
@{
    ViewBag.Title = "Product";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Product</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Product Name</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="* Enter product name">
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-4">Category</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Asian Art</option>
                            <option>Clocks, Watches</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Unit Price</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text">$</span>
                                <input type="text" class="form-control" placeholder="* Enter unit price">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Quantity</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="* Enter quantity">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Product Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Active</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Vase</th>
                        <td>Asian Art</td>
                        <td>$10.02</td>
                        <td>15</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">1945 Telephone</th>
                        <td>Collectables</td>
                        <td>$20</td>
                        <td>2</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>

