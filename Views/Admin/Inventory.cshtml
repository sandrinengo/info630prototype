
@{
    ViewBag.Title = "Inventory";
}
<fieldset>
    <legend>Inventory</legend>
</fieldset>
<form>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("OrderStock", "Admin")">Order Stock</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ReceiveStock", "Admin")">Receive Stock</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ReturnStock", "Admin")">Return Stock</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("TransferStock", "Admin")">Transfer Stock</a>
        </li>
    </ul>
    <br />
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 68rem;">
            <div class="card-header">Search Order</div>
            <div class="card-body">
                <fieldset>
                    <div class="row">
                        <div class="col col-sm-4">
                            <div class="form-group">
                                <label class="form-label mt-4">Show</label>
                                <select class="form-select" id="exampleSelect1">
                                    <option>Open orders</option>
                                    <option>Close orders</option>
                                </select>
                            </div>
                        </div>
                        <div class="col col-sm-4">
                            <div class="form-group">
                                <label class="form-label mt-4">Name/Number/Product/Supplier Invoice</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col col-sm-4">
                            <div class="form-group">
                                <label class="form-label mt-4">Store</label>
                                <select class="form-select" id="exampleSelect1">
                                    <option>West</option>
                                    <option>East</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary mt-4 width-150px">Search</button>
                    &nbsp;
                    <button type="button" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Number</th>
                        <th scope="col">From</th>
                        <th scope="col">To</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created</th>
                        <th scope="col">Items</th>
                        <th scope="col">Total Cost</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <a href="#">ANT-8</a><br />
                            <a href="#">Supplier order</a>
                        </th>
                        <th scope="row">Bolton Auction</th>
                        <td>West Store</td>
                        <td>Open</td>
                        <td>04/30/2023</td>
                        <td>6</td>
                        <td>
                            $89
                        </td>
                        <td><a href="#">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>

