
@{
    ViewBag.Title = "Employee";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Employee</div>
            <div class="card-body">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Employee</label>
                            <select class="form-select" id="exampleSelect1">
                                <option>Kevin K</option>
                                <option>Mel B</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-5">
                            <label class="form-label mt-4">Store</label>
                            <select class="form-select" id="exampleSelect1">
                                <option>West</option>
                                <option>North</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Salary</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" placeholder="* Enter salary">
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="form-group">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Deactivate</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>
            </div>
        </div>
    </div>
</form>

