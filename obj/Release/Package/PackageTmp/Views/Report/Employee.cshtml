
@{
    ViewBag.Title = "Employee Report";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Search</div>
            <div class="card-body">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Hired Date From</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">To</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Last Name</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">First Name</label>
                            <input type="email" class="form-control" id="exampleInputEmail1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Phone</label>
                            <input type="email" class="form-control" id="exampleInputEmail1">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Run</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Hired Date</th>
                        <th scope="col">Employee Name</th>
                        <th scope="col">Work Date</th>
                        <th scope="col">Sign in</th>
                        <th scope="col">Sign out</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">02/01/2023</th>
                        <td>Kevin N</td>
                        <td>03/01/2023</td>
                        <td>07:00 AM</td>
                        <td>03:30 PM</td>
                    </tr>
                    <tr>
                        <th scope="row">02/01/2023</th>
                        <td>Kate V</td>
                        <td>03/02/2023</td>
                        <td>07:00 AM</td>
                        <td>03:30 PM</td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>

