
@{
    ViewBag.Title = "Expense Type";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Manage Expense Type</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Expense Type</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="* Enter expense type">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Description</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Expense Type</th>
                        <th scope="col" style="width:40%;">Description</th>
                        <th scope="col">Active</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Utility</th>
                        <td>Electric, Water</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Transportation</th>
                        <td>Transportation fees</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Rent</th>
                        <td>Transportation fees</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Repairs and maintenance</th>
                        <td>Transportation fees</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>

