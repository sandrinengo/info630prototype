
@{
    ViewBag.Title = "Inventory";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">View Inventory</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label class="form-label mt-4">Category</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Home Decoration</option>
                            <option>Latin</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-4">Product</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Vase</option>
                            <option>1945 Telephone</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-5">
                        <label class="form-label mt-4">Action</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Return to Supplier</option>
                            <option>Donate</option>
                            <option>Trash</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">SKU</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Quantity</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Category</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Sold Quantity</th>
                        <th scope="col">Defective Quantity</th>
                        <th scope="col">Below Reorder Point</th>
                        <th scope="col">Action</th>
                        <th scope="col">Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Home Decoration</th>
                        <th scope="row">Vase</th>
                        <td>$10.02</td>
                        <td>15</td>
                        <td>5</td>
                        <td>1</td>
                        <td>
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        </td>
                        <td><a href="#">Action</a></td>
                        <td><a href="@Url.Action("InventoryDetails", "Admin")">Details</a></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>

