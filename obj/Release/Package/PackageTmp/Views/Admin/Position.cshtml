
@{
    ViewBag.Title = "Position";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Manage Position</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Position Name</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="* Enter position name">
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-4">Job Type</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Management</option>
                            <option>IT</option>
                            <option>Associates</option>
                            <option>Unskilled</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label class="form-label mt-4">Job level</label>
                            <select class="form-select" id="exampleSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-5">
                            <label class="form-label mt-4">Year of Experience</label>
                            <select class="form-select" id="exampleSelect1">
                                <option>0-2 years</option>
                                <option>2-5 years</option>
                                <option>>5 years</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="submit" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Position Name</th>
                        <th scope="col">Job Type</th>
                        <th scope="col">Job Level</th>
                        <th scope="col">Year of Experience</th>
                        <th scope="col">Active</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Sales Associate</th>
                        <td>Sales</td>
                        <td>1</td>
                        <td>0-2 years</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Sales Manager</th>
                        <td>Management</td>
                        <td>3</td>
                        <td>>5 years</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">System Specialist</th>
                        <td>IT</td>
                        <td>2</td>
                        <td>1-2 years</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                    <tr>
                        <th scope="row">Backroom worker</th>
                        <td>Unskilled</td>
                        <td>1</td>
                        <td>0-1 years</td>
                        <td>Yes</td>
                        <td><a href="#">Edit</a></td>
                        <td><a href="#">Deactivate</a></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
</form>
