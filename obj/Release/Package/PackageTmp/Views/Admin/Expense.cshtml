
@{
    ViewBag.Title = "Expense";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-header">Manage Expense</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Expense</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="* Enter expense">
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-4">Expense Type</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>Utility</option>
                            <option>Transportation</option>
                            <option>Rent</option>
                            <option>Repairs and maintenance</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Debit Amount</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Credit Amount</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <label for="exampleInputEmail1" class="form-label mt-4">Transaction Date</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary mt-4 width-150px">Save</button>
                    &nbsp;
                    <button type="button" class="btn btn-secondary mt-4 width-150px">Clear</button>
                </fieldset>

            </div>
        </div>

        <fieldset>
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Expense</th>
                        <th scope="col">Expense Type</th>
                        <th scope="col">Debit Amount</th>
                        <th scope="col">Credit Amount</th>
                        <th scope="col">Transaction Date</th>
                        <th scope="col">Active</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
