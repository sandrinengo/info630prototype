
@{
    ViewBag.Title = "Return Stock";
}
<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link " href="@Url.Action("OrderStock", "Admin")">Order Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="@Url.Action("ReceiveStock", "Admin")">Receive Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="@Url.Action("ReturnStock", "Admin")">Return Stock</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("TransferStock", "Admin")">Transfer Stock</a>
    </li>
</ul>
<br />
<form>
    <div class="tab-pane fade active show" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 38rem;">
            <div class="card-body">
                <fieldset>
                    <div class="form-group row">
                        <div class="col col-sm-7">
                            <label class="form-label mt-4">Name/Number/Product</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col col-sm-7">
                            <label class="form-label mt-4">Or</label><br />
                            <button type="button" class="btn btn-primary mt-4">Scan to add product</button>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Return to Store</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>West</option>
                            <option>East</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Quantity</label>
                        <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter quantity">
                    </div>
                </fieldset>
                <br />
                <fieldset>
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-primary">
                                <th scope="col">Product Name</th>
                                <th scope="col">Return to Store</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    Vase
                                </th>
                                <td>West Store</td>
                                <td><a href="#">Edit</a></td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>
                <button type="button" class="btn btn-primary mt-4 width-150px">Save</button>
                &nbsp;
                <button type="button" class="btn btn-secondary mt-4 width-150px">Cancel</button>
            </div>
        </div>
    </div>

</form>

