@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
}

<form>
    <div class="tab-pane fade active show" id="home" role="tabpanel">
        <div class="card border-secondary mb-3" style="max-width: 32rem;">
            <div class="card-header">Sign In</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                        <input type="email" class="form-control" id="txtEmail" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                        <input type="password" class="form-control" id="txtPassword" placeholder="Password">
                    </div>
                    <div class="row" style="padding-left:12px;">
                        <div class="form-check form-switch mt-4 col">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Remember me</label>
                        </div>
                        <div class="form-check form-switch mt-4 col">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Forgot Password</label>
                        </div>
                    </div>
                    <button type="button" id="btnSignin" class="btn btn-primary mt-4">Sign in</button>
                </fieldset>
            </div>
        </div>
    </div>
</form>
<script>
